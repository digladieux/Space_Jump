<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background = "@drawable/background_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonReturnMenu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="634dp"
        android:layout_marginBottom="337dp"
        android:background="@drawable/return_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageAttempt"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:contentDescription="@string/attempt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/empty" />

    <TextView
        android:id="@+id/textAttempt"
        android:layout_width="132dp"
        android:layout_height="40dp"
        android:fontFamily="@font/shojumaru"
        android:text="@string/attempt"
        android:textAlignment="textStart"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageAttempt"
        app:layout_constraintEnd_toEndOf="@+id/imageAttempt"
        app:layout_constraintStart_toStartOf="@+id/imageAttempt"
        app:layout_constraintTop_toTopOf="@+id/imageAttempt" />

</android.support.constraint.ConstraintLayout>
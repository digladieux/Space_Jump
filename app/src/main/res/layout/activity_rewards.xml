<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background = "@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonBadgeBlue"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/alienblue_badge2"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/buttonBadgePink"
        app:layout_constraintEnd_toStartOf="@+id/buttonBadgeBeige"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonBadgeBeige"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/alienbeige_badge2"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/buttonBadgeYellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonBadgeBlue"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonBadgePink"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/alienpink_badge2"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/textRewards"
        app:layout_constraintEnd_toStartOf="@+id/buttonBadgeYellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBadgeBlue" />

    <Button
        android:id="@+id/buttonBadgeYellow"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/alienyellow_badge2"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/textRewards"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonBadgePink"
        app:layout_constraintTop_toBottomOf="@+id/buttonBadgeBeige" />

    <Button
        android:id="@+id/buttonBadgeGreen"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/aliengreen_badge2"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.298" />

    <Button
        android:id="@+id/buttonReturn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/return_arrow"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textRewards"
        android:layout_width="300dp"
        android:layout_height="62dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/shojumaru"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBadgeYellow" />
</android.support.constraint.ConstraintLayout>